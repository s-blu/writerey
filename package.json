{
  "name": "writerey",
  "description": "Writerey helps you to organize, compose and refine your stories.",
  "version": "0.10.0-SNAPSHOT",
  "author": {
    "name": "Stefanie S",
    "email": "sts@s-blu.de"
  },
  "license": "MPL-2.0",
  "main": "main.js",
  "homepage": "https://writerey.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/s-blu/writerey.git"
  },
  "scripts": {
    "ng": "ng",
    "start": "electron-forge start",
    "build": "ng build --prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "electron .",
    "build-electron": "ng build --prod && npm run electron .",
    "flask": "python server/app.py development",
    "unix:flask": "~/.local/bin/pipenv run python3 server/app.py development",
    "build-make": "ng build --prod && electron-forge make",
    "make": "electron-forge make",
    "build-docs": "cd documentation && mkdocs build"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^10.0.11",
    "@angular/cdk": "^10.1.3",
    "@angular/common": "^10.0.11",
    "@angular/compiler": "^10.0.11",
    "@angular/core": "^10.0.11",
    "@angular/forms": "^10.0.11",
    "@angular/material": "^10.1.3",
    "@angular/platform-browser": "^10.0.11",
    "@angular/platform-browser-dynamic": "^10.0.11",
    "@angular/router": "^10.0.11",
    "@ckeditor/ckeditor5-angular": "^1.2.3",
    "@ngneat/transloco": "^2.19.1",
    "angular-animations": "0.0.10",
    "core-js": "^3.6.5",
    "electron-squirrel-startup": "^1.0.0",
    "immutable": "^4.0.0-rc.12",
    "material-design-icons": "^3.0.1",
    "python-shell": "^2.0.1",
    "rxjs": "^6.6.2",
    "tslib": "^2.0.0",
    "uuid": "^8.3.0",
    "zone.js": "^0.11.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1000.7",
    "@angular/cli": "^10.0.7",
    "@angular/compiler-cli": "^10.0.11",
    "@angular/language-service": "^10.0.11",
    "@ckeditor/ckeditor5-inspector": "^2.2.0",
    "@electron-forge/cli": "^6.0.0-beta.52",
    "@electron-forge/maker-deb": "^6.0.0-beta.52",
    "@electron-forge/maker-rpm": "^6.0.0-beta.52",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.52",
    "@electron-forge/maker-zip": "^6.0.0-beta.52",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.6.0",
    "codelyzer": "^6.0.0",
    "electron": "^9.2.1",
    "husky": "^4.2.5",
    "jest": "^26.5.2",
    "jest-preset-angular": "^8.3.1",
    "lint-staged": "^10.2.11",
    "prettier": "2.0.5",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts|*.html|*.scss": "prettier --write"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "ignore": [
          ".idea",
          ".vscode",
          ".github",
          "_writerey_data",
          "e2e",
          "src",
          "documentation",
          "server",
          "__pycache__",
          ".gitignore",
          "node_modules",
          "docs",
          ".browserslistrc",
          ".editorconfig",
          "angular.json",
          "browserslist",
          "jest.config.js",
          "package-lock.json",
          "Pipfile.*",
          "transloco.config.js",
          "ts.*json",
          "CNAME"
        ],
        "icon": "dist/writerey/assets/writerey.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "writerey"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
